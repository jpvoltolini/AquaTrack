@page
@model AquaTrack.Pages.Leituras.DetailsModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Leitura</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Apartamento:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Leitura.Apartamento)
        </dd>
        <dt class="col-sm-2">
            Bloco:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Leitura.Bloco)
        </dd>
        <dt class="col-sm-2">
            Leitura Anterior:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Leitura.LeituraAnterior)
        </dd>
        <dt class="col-sm-2">
            Leitura Atual:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Leitura.LeituraAtual)
        </dd>
        <dt class="col-sm-2">
            Consumo Total:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Leitura.Consumo)
       </dd>
        <dt class="col-sm-2">
                 Data da Ultima Leitura:
        </dt>
        <dd class="col-sm-10">
                 @Html.DisplayFor(model => model.Leitura.DataLeitura)
        </dd>
    </dl>
</div>
<div>
    <a button type="button" class="btn btn-success" asp-page="./Edit" asp-route-id="@Model.Leitura.Id">Editar</a> 
    <a button type="button" class="btn btn-outline-danger" asp-page="./Index">Voltar ao Menu</a>
</div>
